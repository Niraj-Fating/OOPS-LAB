#include <iostream>
using namespace std;

class student
{
    private:
    string name;
    int age;
    float height;
    
    public:
    void getdetails()
    {
        cout<<"Enter name, age and height:";
        cin>>name>>age>>height;
    }
    void putdetails()
    {
        cout<<"\nName:"<<name;
        cout<<"\nAge:"<<age;
        cout<<"\nHeight:"<<height;
    }

};
int main()
{
    student s;
    s.getdetails();
    s.putdetails();
    return 0;
}
